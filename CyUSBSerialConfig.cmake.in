include(CMakeFindDependencyMacro)
if(NOT @PROJECT_NAME@_FIND_COMPONENTS)
    message("@PROJECT_NAME@: No components specified. Finding all components...")
    set(@PROJECT_NAME@_FIND_COMPONENTS "@components@")
else()
    message("@PROJECT_NAME@: Finding components ${@PROJECT_NAME@_FIND_COMPONENTS}...")
endif()

foreach(component ${@PROJECT_NAME@_FIND_COMPONENTS})
    message("-- looking for ${component}")
    include(${CMAKE_CURRENT_LIST_DIR}/@PROJECT_NAME@-${component}Config.cmake)
endforeach()

get_filename_component(lib_root "${CMAKE_CURRENT_LIST_DIR}" PATH)  #  .../lib/cmake <-- .../lib/cmake/@PROJECT_NAME@
get_filename_component(lib_root "${lib_root}" PATH)  #  .../lib <-- .../lib/cmake
set(@PROJECT_NAME@_LIBRARY_DIR ${lib_root}/@PROJECT_NAME@)

set(@PROJECT_NAME@_FOUND TRUE)
